<Window x:Class="Split_Schnitzel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Split_Schnitzel"
        mc:Ignorable="d"
        Background="#111111"
        Closing="OnWindowClosing"
        Title="Split Schnitzel" Height="720" Width="1280">
    <Grid Name="MainGrid" ShowGridLines="true">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Click="OnWindowAssignLeft">Click me to enter window picking mode</Button>
            <Button Grid.Column="1" Click="OnWindowAssignRight">Click me to enter window picking mode</Button>
        </Grid>
    </Grid>
</Window>
